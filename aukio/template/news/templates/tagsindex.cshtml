@{
    _Layout = "./template/Layout.cshtml";
    ViewBag.Title = "News Tags";
    ViewBag.Description = "News Tags";
}

@section header{
    <h1 style="margin-top: 40px">Tags:</h1>
}

<div class="row">
    <div class="span12">

        @foreach (var tag in Model.Tags)
        {
            <h2 class="heading"><a href="@tag.Location">@tag.Name</a></h2>
        }

    </div>
</div>
