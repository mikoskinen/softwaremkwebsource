@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".carousel").carousel();
        });
    </script>
	
    <script src="http://assets.softwaremk.org/js/easySlider1.7.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            showSlider();
            showScreenshots();
        });

        function showSlider() {
            $("#slider").easySlider({
                auto: true,
                continuous: true,
                pause: 5000,
                controlsShow: false
            });
        }

        function showScreenshots() {
            $("#screenshotarea").css("visibility", "visible");
        }
        
    </script>
	
}
