            <div class="container">
                <div class="row-fluid">
                    <!--footer main columns-->
                    <div class="span3 last">
                        <!--footer logo-->
                        <a href="index.html" class="logo-foot" title="Home">
                        <h3>Contact</h3></a>
                        @Model.Address
