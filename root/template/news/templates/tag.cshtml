@{
    _Layout = "./template/Layout.cshtml";
    ViewBag.Title = "News Tag: " + @Model.Tag.Name;
    ViewBag.Description = "News tag: " + @Model.Tag.Name;
}

@section header{
    <h1 style="margin-top: 40px">News tagged: @Model.Tag.Name</h1>
}

<div class="row">
    <div class="span12">
        @foreach (var page in Model.Tag.Pages)
        {
            <h2 class="heading">
                <a href="@page.Location">@page.Title</a></h2>
            <p>@page.Description</p>
        }

    </div>
</div>
