@{
    _Layout = "./template/Layout.cshtml";
    ViewBag.Title = Model.Title;
    ViewBag.Description = Model.MetaDescription;
}

@section header
{
    <section class="taglineWrap">
        <div class="container">
            <div class="row-fluid">
                <div class="span12 pagination-centered">
                    <a class="brand pagination-centered" href="http://www.adafy.com" title="Home">
                        <img class="pagination-centered logo" src="@Model.Assets/img/content/Adafy_Hori.png" alt="Adafy" /></a>
                </div>
            </div>
            <div class="row-fluid  tagline">
                <div class="span8">
                    <h2>@Model.Description</h2>
                </div>
                <div class="span4 action">
                    <div>
                        <a href="#contact" class="btn btn-info">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /container -->
    </section>
}

<div class="row-fluid featuredContent">
    <div class="span4">
        <h1>
            <span class="btn btn-inverse">01</span>
            Windows Phone</h1>
        <p>@Model.WindowsPhone @*<a href="#">
                                <span class="label">More</span></a>*@
        </p>
    </div>
    <div class="span4">
        <h1>
            <span class="btn btn-inverse">02</span>
            Windows 8</h1>
        <p>@Model.Windows8 @*<a href="#">
                                <span class="label">More</span></a>*@
        </p>
    </div>
    <div class="span4">
        <h1>
            <span class="btn btn-inverse">03</span>
            Windows Azure</h1>
        <p>@Model.WindowsAzure @*<a href="#">
                                <span class="label">More</span></a>*@
        </p>
    </div>
</div>
<div class="row-fluid">
    <div class="divider dotted clearfix">
        <span></span>
    </div>
</div>

<div class="row-fluid relative">
    <div class="span12">
        <h1>Our Latest Windows 8 Apps</h1>
    </div>
</div>
<div class="row">
    <div class="span12">
        <ul class="thumbnails">
            @foreach (var app in Model.Win8Apps)
            {
                <li class="span4">
                    <a href="@app.Link">
                        <div class="pagination-centered">
                            <img alt="@app.Title" src="@app.Image" />
                        </div>
                        <h4 class="pagination-centered">
                            @app.Title</h4>
                    </a>
                    <p class="pagination-centered">@app.Win8App</p>
                </li>
                            
            }            
        </ul>
    </div>
</div>
<div class="row-fluid relative">
    <div class="span12">
        <h1>Our Recent Windows Phone Apps</h1>
    </div>
</div>
<div class="row">
    <div class="span12">
        <ul class="thumbnails">
            @foreach (var app in Model.Apps)
            {
                <li class="span4">
                    <a href="@app.Link">
                        <div class="pagination-centered">
                            <img alt="@app.Title" src="@app.Image" />
                        </div>
                        <h4 class="pagination-centered">
                            @app.Title</h4>
                    </a>
                    <p class="pagination-centered">@app.App</p>
                </li>
                            
            }
        </ul>
    </div>
</div>

@section testimonial{
    <section class="testimonial">
        <div class="container">
            <div class="row-fluid">
                <div class="span12">
                    <blockquote>
                        <p>@Model.Quote</p>
                    </blockquote>
                </div>
            </div>
        </div>
    </section>
}
