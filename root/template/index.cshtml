                    </div>
                    <!--main nav-->
                    <div class="central-nav">
                        <ul class="nav">
                            <li>
                                <a href="http://www.adafy.com">Home</a></li>
                            <li class="dropdown">
                                <a href="#">Apps<b class="caret"></b></a>
